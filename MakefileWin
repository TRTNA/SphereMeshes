# name of the file
FILENAME = main

# Visual Studio compiler
CC = cl.exe

# Include path
IDIR = include/ /Iimgui/

# compiler flags:
CCFLAGS  = /Od /Zi /EHsc /MT

# linker flags:
LFLAGS = /LIBPATH:libs glfw3.lib gdi32.lib user32.lib Shell32.lib

SOURCES = include/glad/glad.c src/$(FILENAME).cpp imgui/*.cpp
TARGET = $(FILENAME).exe

.PHONY : all
all:
	$(CC) $(CCFLAGS) /I$(IDIR) $(SOURCES) /Fe:$(TARGET) /link $(LFLAGS)

.PHONY : clean
clean:
	del $(TARGET)
	del *.obj *.lib *.exp *.ilk *.pdb
